{
    "cSpell.words": [
        "conds",
        "ecsite",
        "errgroup",
        "GOFILE",
        "golangci",
        "gomock",
        "GOPACKAGE",
        "mockgen",
        "ossp",
        "testcontainers",
        "usecase"
    ],
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "file": ".vscode/copilot-commit-message-instructions.md"
        },
    ],
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.go": "${capture}.go, ${capture}_test.go, mock_${capture}.go"
    },
    "workbench.editor.customLabels.patterns": {
        "**/*.go": "${dirname}/${filename}.${extname} .../${dirname(1)}",
      },
      "go.testTags": "small,medium,large",
      "go.buildFlags": [
        "-tags",
        "small,medium,large"
      ],
}
